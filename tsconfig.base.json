{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2023",
    "lib": ["ES2023"],
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "incremental": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/*"],
      "@common/*": ["src/common/*"],
      "@auth/*": ["src/modules/auth/*"],
      "@event/*": ["src/modules/event/*"],
      "@mail/*": ["src/modules/mail/*"],
      "@subscription/*": ["src/modules/subscription/*"],
      "@user/*": ["src/modules/user/*"],
      "@config/*": ["src/config/*"],
      "@aws/*": ["src/common/aws/*"],
      "@constants/*": ["src/common/constants/*"],
      "@vo/*": ["src/common/value-objects/*"],
      "@logger/*": ["src/common/logger/*"],
      "@exceptions/*": ["src/common/exceptions/*"],
      "@interceptors/*": ["src/common/interceptors/*"],
      "@enums/*": ["src/common/enums/*"],
      "@guards/*": ["src/common/guards/*"],
      "@pipes/*": ["src/common/pipes/*"],
      "@shared-types/*": ["src/common/types/*"],
      "@decorators/*": ["src/common/decorators/*"],
      "@utils/*": ["src/common/decorators/utils/*"],
      "@scripts/*": ["scripts/*"],
      "@infra/*": ["infra/*"],
      "@tests/*": ["tests/*"]
    }
  }
}
